{
  "manifest_version": 3,
  "name": "BOQ Auth Lock",
  "version": "1.0",
  "description": "Autofill extension with single-Gmail-per-PC lock (requires server).",
  "permissions": ["storage"],
  "host_permissions": ["https://www.eprocure.gov.bd/*", "https://kiron-boq.vercel.app/*"],
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": ["https://www.eprocure.gov.bd/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": { "256": "icon256.png" }
}
